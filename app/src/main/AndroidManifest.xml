<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.ducvietho.moki">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.location"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".screen.activities.login.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screen.activities.home.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.darsh.multipleimageselect.activities.AlbumSelectActivity"
            android:theme="@style/MultipleImageSelectTheme" />
        <activity
            android:name=".screen.activities.camera.CameraActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".screen.activities.postproduct.PostProductActivity">
        </activity>
        <activity
            android:name=".screen.activities.productdetail.ProductDetailActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".screen.activities.productimage.DetailZoomActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".screen.activities.comment.CommentActivity">
        </activity>
        <activity android:name=".screen.activities.chat.ChatActivity">
        </activity>
        <activity android:name=".screen.activities.product_seller.ProductSellerActivity">
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".screen.activities.category.CategoryActivity">
        </activity>
        <activity android:name=".screen.activities.status.StatusActivity">
        </activity>
        <activity android:name=".screen.activities.address.AddressActivity">
        </activity>
        <activity android:name=".screen.activities.insert_address.InsertAddressActivity">
        </activity>
        <activity android:name=".screen.activities.district.DistrictActivity">
        </activity>
        <activity android:name=".screen.activities.village.VillageActivity">
        </activity>
    </application>

</manifest>