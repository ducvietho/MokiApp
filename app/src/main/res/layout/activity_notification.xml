<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.ducvietho.moki.screen.activities.notification.NotificationActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_40"
            android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/imgLeft"
                    android:src="@drawable/icon_back_left"/>
                <com.example.ducvietho.moki.utils.customview.FontTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:text="Thông báo"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/ts_16"/>

        </LinearLayout>
        <include layout="@layout/view_line_red"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rec_notification"/>
</LinearLayout>
