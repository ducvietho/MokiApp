<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:gravity="bottom"
              android:orientation="vertical"
            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <Button
            android:id="@+id/btntComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center|right"
            android:padding="@dimen/common_padding_small"
            android:background="@color/gray_light"
            android:text="Xong"
            android:textAllCaps="false"
            android:textColor="@color/red_dark"
            android:textStyle="bold" />
        <io.blackbox_vision.wheelview.view.WheelView
            android:id="@+id/wheelComplete"
            android:layout_width="match_parent"
            app:canLoop="true"
            app:centerTextColor="#ff000000"
            app:drawItemCount="7"
            app:initPosition="3"
            app:lineColor="@color/app_color"
            app:textSize="@dimen/ts_16"
            android:background="@android:color/white"
            app:topBottomTextColor="@android:color/black"
            android:layout_height="@dimen/dip_160"
            android:layout_weight="1.0" />
    </LinearLayout>

</RelativeLayout>