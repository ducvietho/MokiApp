<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@android:color/white"
              android:layout_marginLeft="@dimen/dip_20"
             android:layout_marginRight="@dimen/dip_20">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/dip_50"
        android:layout_height="@dimen/dip_50"
        android:src="@drawable/delete_red"
        android:layout_marginTop="@dimen/dip_10"
        app:civ_border_color="@color/app_color"
        app:civ_border_width="2dp"
        android:layout_gravity="center"
        />

    <com.example.ducvietho.moki.utils.customview.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="25dp"
        android:text="Thông báo"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <com.example.ducvietho.moki.utils.customview.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Kiểm tra kết nối của bạn"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button_nointernet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/blue_button_background"
        android:text="Đóng"
        android:textColor="@color/white" />
</LinearLayout>